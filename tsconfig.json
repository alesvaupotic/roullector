{
  "$schema": "http://json.schemastore.org/tsconfig",
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES6",
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jest"],
    "incremental": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "$commands/*": ["./src/commands/*"]
    }
  }
}
